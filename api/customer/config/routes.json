{
  "routes": [
    {
      "method": "GET",
      "path": "/customers",
      "handler": "customer.find",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/customers/count",
      "handler": "customer.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/customers/:id",
      "handler": "customer.findOne",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/customers",
      "handler": "customer.create",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/customers/nonce",
      "handler": "customer.createNonce",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/customers/signin",
      "handler": "customer.signIn",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/customers/:id",
      "handler": "customer.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
