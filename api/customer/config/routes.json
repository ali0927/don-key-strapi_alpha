{
  "routes": [
    {
      "method": "GET",
      "path": "/customers",
      "handler": "customer.find",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/customers/count",
      "handler": "customer.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/customers/:id",
      "handler": "customer.findOne",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/customers",
      "handler": "customer.create",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/customers/nonce/:address",
      "handler": "customer.getNonce",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/customers/sign",
      "handler": "customer.sign",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/customers/:id",
      "handler": "customer.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
